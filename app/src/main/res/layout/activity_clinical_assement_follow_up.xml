<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:id="@+id/card_knee"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_margin="@dimen/dimen_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:background="@drawable/gradient_carview1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Rehab knee"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textColor="#5E5E5E"
                    android:textSize="@dimen/thirty_text_size" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/cli_desc1"
                    android:layout_toLeftOf="@+id/rehab_knee_img"
                    android:layout_below="@+id/text1"
                    android:padding="@dimen/five_dimen"
                    android:textColor="#5E5E5E"
                    android:layout_centerVertical="true"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/rehab_knee_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/knee"
                    android:padding="5dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_hamstring"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            android:layout_below="@+id/card_knee"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_margin="@dimen/dimen_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:background="@drawable/gradient_carview2"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_ham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Hamstring"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/milk_white"
                    android:textSize="@dimen/thirty_text_size" />

                <TextView
                    android:id="@+id/text_ham2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/cli_desc2"
                    android:layout_toLeftOf="@+id/text_ham_img"
                    android:layout_below="@+id/text_ham"
                    android:padding="@dimen/five_dimen"
                    android:textColor="@color/milk_white"
                    android:layout_centerVertical="true"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/text_ham_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/hamstringimg"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_balance"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            android:layout_below="@+id/card_hamstring"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_margin="@dimen/dimen_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:background="@drawable/gradient_carview3"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_bala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Balance"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/milk_white"
                    android:textSize="@dimen/thirty_text_size" />

                <TextView
                    android:id="@+id/text_bal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/cli_desc3"
                    android:layout_toLeftOf="@+id/text_bala"
                    android:layout_below="@+id/text_bala"
                    android:padding="@dimen/five_dimen"
                    android:textColor="@color/milk_white"
                    android:layout_centerVertical="true"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/text_bala_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/balancicon"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>



</ScrollView>