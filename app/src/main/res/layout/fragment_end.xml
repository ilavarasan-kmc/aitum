<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textView_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="New Text"
        android:textStyle="bold"
        android:textColor="#000"
        android:textIsSelectable="false"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">
        <!--
            To get a circular shape, we need to apply the same value for width and height
        -->
        <ImageView
            android:layout_marginTop="@dimen/dimen_10sdp"
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circular Shape"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_shape"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/done"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Circular Shape"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_done"
            android:textColor="#fff"
            />
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/button_finish"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_green_dark"
        android:text="@string/hint_finish"
        android:textColor="#FFF"
        android:textSize="16sp" />

</RelativeLayout>