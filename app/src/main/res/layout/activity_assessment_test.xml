<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/toolbar_customs_layout" />

    <androidx.cardview.widget.CardView

        android:layout_marginTop="@dimen/dimen_10sdp"
        style="@style/Card">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_physical_test"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Physical Testing"
                android:textSize="18sp"
                android:drawablePadding="@dimen/dimen_10sdp"
                android:textAlignment="textStart"
                android:drawableLeft="@drawable/ic_backup_black_24dp"
                android:background="@color/pink"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        style="@style/Card">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_live_recording"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Live Recording"
                android:textSize="18sp"
                android:drawablePadding="@dimen/dimen_10sdp"
                android:textAlignment="textStart"
                android:drawableLeft="@drawable/ic_test"
                android:background="@color/pink"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        style="@style/Card">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_com_tracking"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Competition tracking"
                android:textSize="18sp"
                android:drawablePadding="@dimen/dimen_10sdp"
                android:textAlignment="textStart"
                android:drawableLeft="@drawable/ic_test"
                android:background="@color/pink"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>