<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_customs_layout" />

    <androidx.cardview.widget.CardView
        style="@style/Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_margin="@dimen/dimen_10sdp"
        android:shadowRadius="@android:integer/config_shortAnimTime"
        android:padding="@dimen/dimen_10sdp"
        android:background="@color/gradient_back_violet"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="Schedule List"
        style="@style/Text.Title"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dimen_10sdp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>