<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/nav_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_logo_img"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ATIUM Welcomes you ,"
        android:textColor="@color/dark_pink"
        android:textStyle="bold"
        android:textSize="@dimen/default_text_size"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/nav_logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>



    <TextView
        android:id="@+id/nav_mm_filed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr / Ms :"
        android:textColor="@color/orange_soft"
        android:textSize="@dimen/default_text_size"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/welcome_txt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/nau_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/logo_bottom_orange"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/nav_mm_filed"
        android:textSize="@dimen/default_text_size"
        android:typeface="sans"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/welcome_txt"/>

    <TextView
        android:id="@+id/scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scope : "
        android:textColor="@color/orange_soft"
        android:textSize="@dimen/default_text_size"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/nav_mm_filed"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/txt_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_pink"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/default_text_size"
        android:layout_toRightOf="@+id/scope"
        android:typeface="sans"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/nau_username_txt"/>


</RelativeLayout>
